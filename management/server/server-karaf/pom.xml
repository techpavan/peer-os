<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>io.subutai</groupId>
    <artifactId>mgmt-server-parent</artifactId>
    <version>7.1.2-SNAPSHOT</version>
  </parent>

  <artifactId>subutai</artifactId>
  <name>Subutai Server Karaf</name>
  <packaging>karaf-assembly</packaging>

  <description>Subutai Server Custom Karaf Distribution</description>

  <properties>
    <assembly.directory>${project.build.directory}/assembly</assembly.directory>
    <maven.build.timestamp.format>yyyyMMddHHmmss</maven.build.timestamp.format>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>framework</artifactId>
      <version>${karaf.version}</version>
      <type>kar</type>
    </dependency>
    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>standard</artifactId>
      <version>${karaf.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>enterprise</artifactId>
      <version>${karaf.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>subutai-application</artifactId>
      <version>${project.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.karaf.features</groupId>
      <artifactId>spring</artifactId>
      <version>${karaf.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.cxf.karaf</groupId>
      <artifactId>apache-cxf</artifactId>
      <version>${org.apache.cxf.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>pl.project13.maven</groupId>
      <artifactId>git-commit-id-plugin</artifactId>
      <version>2.2.0</version>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>pl.project13.maven</groupId>
        <artifactId>git-commit-id-plugin</artifactId>
        <version>2.2.0</version>
        <executions>
          <execution>
            <goals>
              <goal>revision</goal>
            </goals>
          </execution>
        </executions>

        <configuration>
          <injectAllReactorProjects>true</injectAllReactorProjects>
          <dotGitDirectory>../../${project.basedir}/.git</dotGitDirectory>
          <generateGitPropertiesFile>true</generateGitPropertiesFile>
          <generateGitPropertiesFilename>${project.basedir}/src/main/assembly/etc/git.properties
          </generateGitPropertiesFilename>
        </configuration>

      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.basedir}/target/assembly</outputDirectory>
              <overwrite>true</overwrite>
              <resources>
                <resource>
                  <directory>${project.basedir}/src/main/assembly</directory>
                  <filtering>false</filtering>
                </resource>
                <resource>
                  <directory>${project.basedir}/src/main/filtered-assembly</directory>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>webui</artifactId>
                  <destFileName>webui-${project.version}.war</destFileName>
                  <outputDirectory>target/assembly/deploy</outputDirectory>
                  <type>war</type>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.karaf.tooling</groupId>
        <artifactId>karaf-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>deb</id>
      <build>
        <plugins>
          <!-- DEB-related plugins -->
          <plugin>
            <groupId>org.apache.karaf.tooling</groupId>
            <artifactId>karaf-maven-plugin</artifactId>
            <configuration>
              <ignoreDependencyFlag>true</ignoreDependencyFlag>
              <targetServerDirectory>${assembly.directory}</targetServerDirectory>
              <bootFeatures>
                <feature>standard</feature>
                <feature>kar</feature>
                <feature>war</feature>
                <feature>ssh</feature>
                <feature>subutai-application</feature>
                <feature>jpa/2.0.0</feature>
                <feature>openjpa</feature>
                <feature>aries-annotation</feature>
                <feature>http</feature>
                <feature>jndi</feature>
                <feature>transaction</feature>
                <feature>jdbc</feature>
              </bootFeatures>
            </configuration>
            <executions>
              <execution>
                <id>features-add-to-repo</id>
                <phase>generate-resources</phase>
                <goals>
                  <goal>features-add-to-repository</goal>
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>mvn:org.apache.karaf.features/framework/${karaf.version}/xml/features</descriptor>
                    <descriptor>mvn:org.apache.karaf.features/standard/${karaf.version}/xml/features</descriptor>
                    <descriptor>mvn:org.apache.karaf.features/enterprise/${karaf.version}/xml/features</descriptor>
                    <descriptor>mvn:org.apache.karaf.features/spring/${karaf.version}/xml/features</descriptor>
                    <descriptor>mvn:org.apache.cxf.karaf/apache-cxf/${org.apache.cxf.version}/xml/features</descriptor>
                    <descriptor>mvn:${project.groupId}/subutai-application/${project.version}/xml/features</descriptor>
                  </descriptors>
                  <features>
                    <feature>standard</feature>
                    <feature>kar</feature>
                    <feature>war</feature>
                    <feature>ssh</feature>
                    <feature>cxf</feature>
                    <feature>jdbc</feature>
                    <feature>openjpa</feature>
                    <feature>subutai-application</feature>
                    <feature>pax-jetty</feature>
                    <feature>pax-http</feature>
                    <feature>pax-http-whiteboard</feature>
                    <feature>pax-war</feature>
                  </features>
                  <repository>${assembly.directory}/system</repository>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <artifactId>maven-resources-plugin</artifactId>
            <version>2.6</version>
            <executions>
              <execution>
                <id>copy-deb-content</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <overwrite>true</overwrite>
                  <!-- Copying Management files to deb source folder -->
                  <outputDirectory>target/deb/opt/subutai-mng</outputDirectory>
                  <resources>
                    <resource>
                      <directory>${assembly.directory}</directory>
                    </resource>
                  </resources>
                </configuration>
              </execution>
              <execution>
                <id>copy-system-content</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <overwrite>true</overwrite>
                  <!-- Copying install scripts to deb source folder -->
                  <outputDirectory>target/deb</outputDirectory>
                  <resources>
                    <resource>
                      <directory>src/main/system</directory>
                    </resource>
                  </resources>
                </configuration>
              </execution>
              <execution>
                <id>copy-deb-scripts</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>copy-resources</goal>
                </goals>
                <configuration>
                  <overwrite>true</overwrite>
                  <!-- Copying install scripts to deb source folder -->
                  <outputDirectory>target/deb/DEBIAN</outputDirectory>
                  <resources>
                    <resource>
                      <directory>src/main/scripts</directory>
                    </resource>
                  </resources>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-antrun-plugin</artifactId>
            <version>1.8</version>
            <executions>
              <execution>
                <!-- Setting proper permissions -->
                <id>fix-permissions</id>
                <phase>prepare-package</phase>
                <configuration>
                  <target>
                    <chmod perm="ugo+x">
                      <fileset dir="target/deb">
                        <include name="opt/subutai-mng/bin/**" />
                        <include name="DEBIAN/post*" />
                        <include name="DEBIAN/pre*" />
                      </fileset>
                    </chmod>
                  </target>
                </configuration>
                <goals>
                  <goal>run</goal>
                </goals>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>net.sf.debian-maven</groupId>
            <artifactId>debian-maven-plugin</artifactId>
            <version>1.0.6</version>
            <executions>
              <execution>
                <!-- Building deb package -->
                <id>build-deb-package</id>
                <phase>prepare-package</phase>
                <goals>
                  <goal>package</goal>
                </goals>
                <configuration>
                  <packageName>management-${git.branch}</packageName>
                  <packageVersion>${project.version}</packageVersion>
                  <maintainerName>Subutai</maintainerName>
                  <packageDependencies>
                    <packageDependencies>openjdk-8-jre-headless</packageDependencies>
                    <packageDependencies>curl</packageDependencies>
                    <packageDependencies>influxdb</packageDependencies>
                  </packageDependencies>
                  <excludeAllArtifacts>true</excludeAllArtifacts>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <!-- DEB-related plugins -->
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
